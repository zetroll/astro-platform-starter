---
import Header from './Header.astro';
import Footer from './Footer.astro';
import GlobalCSS from '../styles/global.css?inline'; // Assuming global styles are handled this way
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="keywords" content="Gen AI Training, AI Workshops, AI Consulting, AI in Education, India">
    <title>{title}</title>
    <style is:inline>{GlobalCSS}</style>
    {/* You might need to copy other <head> elements from the original layout if necessary */}
</head>
<body>
    <Header /> {/* Using the starter template's Header */}
    <header>
        <nav>
            <div class="container">
                <h1><a href="/">Purvabh Surana</a></h1>
                <ul>
                    <li><a href="#about">About</a></li>
                    <li><a href="#workshop">Workshops</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <slot />
    </main>
    <footer>
        <div class="container">
            <p>&copy; 2025 Purvabh Surana. All rights reserved.</p>
        </div>
    </footer>
    <Footer /> {/* Using the starter template's Footer */}
    {/* You might need to copy other <body> elements or scripts from the original layout if necessary */}
</body>
</html>
